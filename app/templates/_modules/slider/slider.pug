mixin slider()
  .slider__wrap#slider
    .slider__item.current
      img(src="assets/slide.png" alt="")
    .slider__item
      img(src="assets/logo1.png" alt="")
    .slider__item
      img(src="assets/logo2.png" alt="")
    .slider__item
      img(src="assets/logo3.png" alt="")
  .slider__arrows
    .slider__arrow.left#left
      svg(role='img', width='111', height='14')
        use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#arrow')
    .slider__counter
      .slider__count#current 01
      |/
      .slider__count#all 08
    .slider__arrow.right#right
      svg(role='img', width='111', height='14')
        use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#arrow')

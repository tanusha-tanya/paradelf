mixin slider()
  .slider__wrap
    .slider__item
      img(src="assets/slide.png" alt="")
      .slider__arrows
        .slider__arrow-left
          svg(role='img', width='111', height='14')
            use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#arrow')
        .slider__arrow-right
          svg(role='img', width='111', height='14')
            use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#arrow')
        .slider__counter
          .slider__count.current 01
          |/
          .slider__count.all 08
        .slider__arrow-right
